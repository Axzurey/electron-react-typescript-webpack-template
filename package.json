{
  "name": "new-react-app",
  "version": "1.0.0",
  "description": "A new react app without CRA",
  "main": "dist/electron/main.js",
  "scripts": {
    "start": "webpack serve --hot",
    "build": "webpack --config ./webpack.config.js",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "electron:build": "npm run build && tsc -p electron && electron-builder"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "ts-loader": "^9.2.8",
    "typescript": "~4.8.4",
    "webpack": "^5.71.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.5",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "cross-env": "^7.0.3",
    "fork-ts-checker-webpack-plugin": "^7.2.2",
    "html-webpack-plugin": "^5.5.0",
    "react-refresh": "^0.14.0",
    "react-refresh-typescript": "^2.0.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "ncra.app",
    "directories": {
      "buildResources": "assets"
    }
  }
}
